<%- include('partials/header') -%>

<h1 class="text-4xl">Identifiers Sample!</h1>

<% if (locals.isAuthenticated) { %>
    <p>You are logged in. <a href="/profile" class="underline">View your profile</a>.</p>
<% } else { %>
    <p>You are not logged in.</p>
    <hr/>
    <br/>
    <br/>
    <form action="/login" method="post">
        <label for="countries" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Select identifiers combination and click login!</label>
        <select name="loginOption" id="loginOption" class="block p-2 mb-6 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <option value="email">Email</option>
            <option value="email-phone">Email & Phone</option>
            <option value="email-phone-username">Email, Phone & Username</option>
            <option value="email-username">Email & Username</option>
            <option value="phone">Phone</option>
            <option value="phone-username">Phone & Username</option>
            <option value="username">Username</option>
        </select>
        <button type="submit" class="underline">Login</button>
    </form>
<% } %>

<%- include('partials/footer') -%>
